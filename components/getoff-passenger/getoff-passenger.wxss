	.noBus {
		display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	}

	.noBus-Img{
		margin-top: 30%;
		width: 40%;
		margin-bottom: 10%;
	}

	.noBusImg{
		width: 100%;
	}

	.noBus-title{
		color: red;
		font-size: 50rpx;
		font-weight: 600;
	}

	.noBus-content{
		font-size: 45rpx;
